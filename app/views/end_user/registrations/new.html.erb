<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "end_user/shared/error_messages", resource: resource %>

  <div class="field">
    <label>（姓）</label><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  
  <div class="field">
    <label>（名）</label><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>
  
  <div class="field">
    <label>（セイ）</label><br />
    <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
  </div>
  
  <div class="field">
    <label>（メイ）</label><br />
    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "kana_last_name" %>
  </div>
  
  <div class="field">
    <label>メールアドレス</label><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "e" %>
  </div>
  
  <div class="field">
    <label>郵便番号（ハイフンなし）</label><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <label>住所</label><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <label>電話番号（ハイフンなし）</label><br />
    <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <label>パスワード（6文字以上）</label><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label>パスワード（確認用）</label><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "end_user/shared/links" %>

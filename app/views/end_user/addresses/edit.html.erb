<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>配送先編集</h2>
      <%= render "end_user/shared/error_messages", resource: @address %>
      <%= form_with model: @address, url: address_path, local: true do |f| %>
      　<div class="form_group">
          <label>郵便番号（ハイフンなし）</label><br>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="form_group">
          <label>住所</label><br>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form_group">
          <label>宛名</label><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form_group">
          <%= f.submit "変更内容を保存", class: "btn btn-secondary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>


<h2>ジャンル一覧・追加</h2>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render "admin/shared/error_messages", resource: @genre %>
      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      　<div class="form_group">
          <label>ジャンル名</label><br>
          <%= f.text_field :name %>
        </div>
        <div class="form_group">
          <%= f.submit "新規登録", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-secondary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>

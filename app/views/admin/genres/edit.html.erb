<h2>ジャンル編集</h2>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render "admin/shared/error_messages", resource: @genre %>
      <%= form_with model: @genre, url: admin_genre_path, local: true do |f| %>
      　<div class="form_group">
          <label>ジャンル名</label><br>
          <%= f.text_field :name %>
        </div>
        <div class="form_group">
          <%= f.submit "変更を保存", class: "btn btn-secondary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

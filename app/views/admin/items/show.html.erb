<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>商品詳細</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                  <%= attachment_image_tag @item, :image, size: "100x100", fallback: "no_image.jpg" %><br>
              </td>
            </tr>
            <tr>
               <td>商品名</td>
               <td><%= @item.name %></td>
            </tr>
            <tr>
               <td>商品説明</td>
               <td><%= @item.explanation %></td>
            </tr>
            <tr>
               <td>ジャンル</td>
               <td><%= @item.genre_id %></td>
            </tr>
            <tr>
               <td>税込価格<br/>(税抜価格)</td>
               <td><%= @item.tax_out_price*1.1 %><br/><%= @item.tax_out_price %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

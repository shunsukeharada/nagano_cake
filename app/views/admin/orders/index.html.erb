<h1>注文履歴一覧</h1>
<div class="container">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">購入日時</th>
      <th scope="col">購入者</th>
      <th scope="col">注文個数</th>
      <th scope="col">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to l(order.created_at), admin_order_path(order) %></td>
      <td><%= order.end_user.first_name + order.end_user.last_name %></td>
      <td><%= order.order_details.sum(:quantity) %></td>
      <td><%= order.order_status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>